<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="8dp">

    <!-- Header: Location and Next Prayer Countdown -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/location_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="İstanbul"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:minLines="2"
            android:maxLines="2"
            android:gravity="top"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">
            
            <TextView
                android:id="@+id/next_prayer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İkindi vaktine kalan"
                android:textColor="#94A3B8"
                android:textSize="14sp" />

            <Chronometer
                android:id="@+id/countdown_chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#38BDF8"
                android:textSize="24sp"
                android:textStyle="bold"
                android:countDown="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- Dates Container -->
    <LinearLayout
        android:id="@+id/dates_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/header_container"
        android:layout_above="@+id/prayer_times_grid"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gregorian_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21 Aralık 2025 Pazar"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/hijri_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29 Cemaziyelahir 1447"
            android:textColor="#94A3B8"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <!-- Prayer Times Grid Container -->
    <LinearLayout
        android:id="@+id/prayer_times_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="4dp">

        <!-- Row 1: İmsak, Güneş, Öğle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:baselineAligned="false"
            android:layout_marginBottom="4dp">

            <!-- İmsak -->
            <LinearLayout
                android:id="@+id/fajr_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/widget_item_background"
                android:padding="4dp"
                android:layout_marginEnd="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İmsak"
                    android:textColor="#94A3B8"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/fajr_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05:12"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Güneş -->
            <LinearLayout
                android:id="@+id/sun_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/widget_item_background"
                android:padding="4dp"
                android:layout_marginEnd="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Güneş"
                    android:textColor="#94A3B8"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/sun_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:45"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Öğle -->
            <LinearLayout
                android:id="@+id/dhuhr_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/widget_item_background"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Öğle"
                    android:textColor="#94A3B8"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/dhuhr_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:12"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2: İkindi, Akşam, Yatsı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:baselineAligned="false">

            <!-- İkindi -->
            <LinearLayout
                android:id="@+id/asr_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/widget_item_background"
                android:padding="4dp"
                android:layout_marginEnd="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İkindi"
                    android:textColor="#94A3B8"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/asr_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:45"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Akşam -->
            <LinearLayout
                android:id="@+id/maghrib_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/widget_item_background"
                android:padding="4dp"
                android:layout_marginEnd="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akşam"
                    android:textColor="#94A3B8"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/maghrib_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19:12"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Yatsı -->
            <LinearLayout
                android:id="@+id/isha_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/widget_item_background"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yatsı"
                    android:textColor="#94A3B8"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/isha_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:45"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>