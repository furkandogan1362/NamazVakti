<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/notification_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sivas Merkez"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" • "
            android:textColor="#AAAAAA"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/notification_next_prayer_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yatsı:18:39"
            android:textColor="#AAAAAA"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" • "
            android:textColor="#AAAAAA"
            android:textSize="12sp"/>

        <Chronometer
            android:id="@+id/notification_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4FC3F7"
            android:textSize="12sp"
            android:textStyle="bold"
            android:format="%s"/>

    </LinearLayout>

    <!-- Location and Countdown -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/notification_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sivas Merkez"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/notification_countdown_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yatsıya"
            android:textColor="#AAAAAA"
            android:textSize="12sp"/>

        <Chronometer
            android:id="@+id/notification_chronometer_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4FC3F7"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            android:format="%s"/>

    </LinearLayout>

    <!-- Prayer Times Table -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:weightSum="6">

        <!-- İmsak -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:text="İmsak"
                android:textColor="#AAAAAA"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/notif_fajr"
                android:text="05:56"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Sabah/Güneş -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:text="Güneş"
                android:textColor="#AAAAAA"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/notif_sun"
                android:text="07:25"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Öğle -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:text="Öğle"
                android:textColor="#AAAAAA"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/notif_dhuhr"
                android:text="12:25"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- İkindi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:text="İkindi"
                android:textColor="#AAAAAA"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/notif_asr"
                android:text="14:54"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Akşam -->
        <LinearLayout
            android:id="@+id/notif_maghrib_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/notif_maghrib_label"
                android:text="Akşam"
                android:textColor="#AAAAAA"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/notif_maghrib"
                android:text="17:15"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Yatsı -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:text="Yatsı"
                android:textColor="#AAAAAA"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/notif_isha"
                android:text="18:39"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>